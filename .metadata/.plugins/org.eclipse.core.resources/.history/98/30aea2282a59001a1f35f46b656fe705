		String imdbURL="http://www.omdbapi.com/?t="+movieName+"&apikey=8ef8f30f";
		IMDBYou imdbData=new RestTemplate().getForObject(imdbURL, IMDBYou.class);
		
		YoutubeData i=YoutubeData();
		//Quote a=data();
				
		System.out.println(i.getEtag()+i.getKind());
		
		
		return imdbData;
	}
	
